<resources>
    <style name="OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="Theme.Material" parent="Base.Theme.Material">
    </style>
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <style name="Base.Theme.Material" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionModeBackground">@color/primary_color</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="CustomEditTextTheme" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/text_primary</item>
    </style>
    <style name="FabMenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
